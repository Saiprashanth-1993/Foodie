<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="FollowInfo"
            type="profoodies.com.profoodies.home.follow.model.FollowModel"/>

        <variable
            name="viewController"
            type="profoodies.com.profoodies.home.viewmodel.HomePageController"/>
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="profoodies.com.profoodies.homepage.home.view.HomepageActivity">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@drawable/ic_person"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="0dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Chef Mark Edmond"
                android:textColor="@android:color/white" />


            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="352dp"
                android:layout_below="@id/name"
                android:layout_marginTop="20dp">

            </android.support.v4.view.ViewPager>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fheart"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_below="@+id/pager"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:clickable="true"
                android:contentDescription="@null"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="@{viewController.FollowbtnClick(FollowInfo)}"
                android:src="@{FollowInfo.toEditOrSave ? @drawable/heart_round_pink : @drawable/heart_round}"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="0dp" />

        </RelativeLayout>
    </LinearLayout>
</layout>